<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackgroundImage">
        <item name="android:contentDescription">@string/student_hat</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:scaleType">center</item> 
		<item name="android:src">@drawable/student_hat</item>
    </style>
    <style name="TextWhite" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>
    <style name="tableHeaderText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowEntryMainText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeRowItem</item>
    </style>
    <style name="RowEntrySubitemText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeRowSubItem</item>
    </style>
</resources>