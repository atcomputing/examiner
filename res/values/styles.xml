<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackgroundImage">
        <item name="android:contentDescription">@string/student_hat</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:scaleType">center</item> 
		<item name="android:src">@drawable/student_hat</item>
    </style>
    <style name="exhibit" parent="@android:style/TextAppearance">
            <item name="android:layout_width">fill_parent</item>
        	<item name="android:layout_height">wrap_content</item>
        	<item name="android:textColor">#FFFFFF</item>
        	<item name="android:background">#333333</item>
        	<item name="android:typeface">monospace</item>
        	<item name="android:padding">10px</item>
        </style>
        <style name="question" parent="@android:style/TextAppearance">
            <item name="android:layout_width">wrap_content</item>
        	<item name="android:layout_height">wrap_content</item>
        	<item name="android:textColor">#FFFFFF</item>
        	<item name="android:background">#000000</item>
        	<item name="android:typeface">serif</item>
        	<item name="android:padding">10px</item>
        </style>
    <style name="MainTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#007FFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextWhite" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="TextDefault" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:typeface">sans</item>
        </style>
</resources>