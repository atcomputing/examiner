<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/pref_key_preferences"
    android:title="@string/ExamTrainer_Preferences"
    android:summary="@string/Set_ExamTrainer_Preferences">
    <CheckBoxPreference 
        android:key="@string/pref_key_use_timelimits" 
        android:title="@string/Use_Timelimits"
        android:summary="@string/Use_timelimits_during_examination_if_available"
        android:defaultValue="true"/>
    <CheckBoxPreference 
        android:key="@string/pref_key_show_score_instantaneous" 
        android:title="@string/instant_score"
        android:summary="@string/do_not_show_calculating_score_animation_before_showing_the_final_result"
        android:defaultValue="false"/>
</PreferenceScreen>