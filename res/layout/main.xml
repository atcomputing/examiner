<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    	<TextView 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="@string/app_name"
    	/>
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>
    		<Button android:text="@string/select_exam" android:id="@+id/button_select_exam" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    		<Button android:text="@string/configure_examtrainer" android:id="@+id/button_configure_examtrainer" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    		<Button android:text="@string/show_previous_exams" android:id="@+id/button_show_results" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    		<Button android:text="@string/quit" android:id="@+id/button_quit" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    	</LinearLayout>
	</LinearLayout>