<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
    android:id="@+id/selectexam_no_exams_available"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/no_exams_available" />
    <TextView
    android:id="@+id/selectexam_click_on_manage_exams"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/click_on_manage_exams_to_install_one_or_more_exams"/>
    <ListView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/select_exam_list"
              android:layout_weight="1"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectexam_manage_exams"
            android:text="@string/Manage_Exams"/>
</LinearLayout>