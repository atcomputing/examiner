<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView android:text="@+id/selectexamEntryTitle"
              android:id="@+id/selectexamEntryTitle"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingRight="10px"
              android:paddingLeft="0px"/>
    <TextView android:text="@+id/selectexamEntryDate"
              android:id="@+id/selectexamEntryDate"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingRight="10px"
              android:paddingLeft="10px"/>
    <TextView android:text="@+id/selectexamEntryAmountOfQuestions"
              android:id="@+id/selectexamEntryAmountOfQuestions"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingRight="10px"
              android:paddingLeft="10px"/>
    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectexam_start"
            android:text="@string/start_exam"/>
</LinearLayout>