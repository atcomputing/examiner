<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ListView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@android:id/list"
              android:layout_weight="1"/>
    <TextView
    android:id="@android:id/empty"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/no_exams_available"/>
    
    <RelativeLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true">
    	<Button android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:id="@+id/manageExams_deleteAll"
            	android:text="@string/delete_all"
            	android:layout_alignParentLeft="true"/>
    	<Button android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
           	 android:id="@+id/manageExams_getNewExams"
            	android:text="@string/get_new_exams"
            	android:layout_toRightOf="@id/manageExams_deleteAll"/>
    	<Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manageExams_cancel"
            android:text="@string/cancel"
            android:layout_below="@id/manageExams_deleteAll"/>
    </RelativeLayout>
</RelativeLayout>