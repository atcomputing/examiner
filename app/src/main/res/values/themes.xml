<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/atblueverylight</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/atbluedark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/atblueverydark</item>
        <item name="android:colorBackground">@color/atwhite</item>
        <item name="android:colorForeground">@color/atblueverydark</item>
        <item name="android:textColorPrimary">@color/atblueverydark</item>
        <item name="android:textColorSecondary">@color/atwhite_secondarytext</item>
        <item name="android:windowBackground">@color/atwhite</item>
        <item name="android:textColorPrimaryInverse">@color/atblueverylight</item>
        <item name="android:textColorSecondaryInverse">@color/atbluedark</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/atblueverydark</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/atblue</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/atbluelight</item>
    </style>
</resources>