<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackgroundImage">
        <item name="android:contentDescription">@string/student_hat</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:scaleType">center</item> 
		<item name="android:src">@drawable/student_hat</item>
    </style>
    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>
    <style name="tableHeaderText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/atwhite_secondarytext</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/paddingSmall</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowEntryMainText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>
    <style name="RowEntrySubitemText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/atbluelight</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>
    <style name="RowEntryMainTextEqualWidth" parent="RowEntryMainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/atwhite</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:textSize">@dimen/textSizeDialog</item>
        <item name="android:padding">@dimen/paddingDefault</item>
    </style>

    <style name="Dialog.Icon">
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Dialog.Copyright">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/atbluelight</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:color">@color/atblue</item>
        <item name="android:padding">@dimen/paddingSmall</item>
    </style>
</resources>
